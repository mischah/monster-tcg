    clearDeck() {
        if (this.deck.length === 0) {
            this.showSaveIndicator('‚ö†Ô∏è Deck ist bereits leer!', 'error');
            return;
        }
        
        if (confirm('üóëÔ∏è M√∂chtest du wirklich das gesamte Deck leeren?')) {
