    importSaveData(file) {
        if (!file) return;
        
        const reader = new FileReader();
        reader.onload = (e) => {
            try {
                const data = JSON.parse(e.target.result);
                
                this.coins = data.coins || 100;
                this.collection = data.collection || [];
                this.deck = data.deck || [];
                
                this.updateDisplay();
                this.updateDeckBuilder();
                this.saveGameData();
                
                this.showSaveIndicator('üì• Spielstand importiert!', 'success');
            } catch (error) {
                this.showSaveIndicator('‚ùå Import fehlgeschlagen!', 'error');
            }
        };
        reader.readAsText(file);
    }

